<!DOCTYPE HTML>
<html>
    <head>
        <link href="/CSS/stylesheet.css" rel="stylesheet" type="text/css">
        <title>Räume</title>
    </head>
    <body>
        <a href="/">
            <img id = "Logo" src = "/images/haw.png" alt = "HAW Logo"/>
        </a>
        <div id = "schrift">
            <div class="dropdown">
                <button class="dropbtn">Menü</button>
                    <div class="dropdown-content">
                        <a href="/rooms">Raumbuchung</a>
                        <a href="/userInformation">Benutzerübersicht</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
                <div id="header">
                    <h1>HAW Raumbuchungssystem</h1>
                </div>
            <table>
                <% for (let i=0; i < rooms.length; i++) { %>
                    <tr>
                        <td> <%= rooms[i].roomname %></td>
                        <td> <%= rooms[i].user %></td>
                        <td> <%= rooms[i].status %></td>
                        <td> 
                            <form action= "<%= "/delete/" + rooms[i]._id%>" method = "post"> 
                                <button type = "submit">Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </body>
</html>